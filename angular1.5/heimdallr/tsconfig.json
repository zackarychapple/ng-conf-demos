  "compilerOptions": {
    "target": "ES5",
    "module": "system",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "sourceRoot": "/src"
  },
  "exclude": [
    "node_modules",
    "typings"
  ]
}